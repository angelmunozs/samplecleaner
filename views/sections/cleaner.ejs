<div id="section-cleaner" class="section col-xs-12">
	<div class="row">
		<h2>
			Clean your recordings!
		</h2>
		<h4>
			Sample Cleaner has been designed to clean the background noise from sound recordings of your vinyl discs and cassettes.
		</h4>
		<!-- Step titles -->
		<div class="col-xs-12">
			<div class="col-xs-3 step-box">
				<h4 class="step-header active" id="step1-header">
					<b class="step-number">1</b>
					Upload your sound.
				</h4>
			</div>
			<div class="col-xs-3 step-box">
				<h4 id="step2-header" class="step-header">
					<b class="step-number">2</b>
					Select the kind of noise.
				</h4>
			</div>
			<div class="col-xs-3 step-box">
				<h4 id="step3-header" class="step-header">
					<b class="step-number">3</b>
					Wait for the application to clean it.
				</h4>
			</div>
			<div class="col-xs-3 step-box">
				<h4 id="step4-header" class="step-header">
					<b class="step-number">4</b>
					Download and save the file.
				</h4>
			</div>
		</div>
		<!-- Step box -->
		<div class="step col-xs-12">
			<div id="step1">
				<i class="fa fa-plus fa-4x"></i><br>
				Drag file here, or
				<div class="file-upload btn btn-upload">
					<span>Select file</span>
					<input id="dirty" name="dirty" type="file">
				</div>
				<div id="section-error-1" class="section-error"></div>
			</div>
			<div id="step2" class="hdn">
				<p>File: <span id="file-name"></span></p>
				<div class="noise-type">
					<div class="rslider">
						<div class="rslider-tip">Decade:</div>
						<div id="noise-year" class="rslider-slider"></div>
					</div>
					<div class="rslider basic">
						<div class="rslider-tip">Type of noise:</div>
						<div id="noise-profile" class="rslider-slider"></div>
					</div>
					<div class="rslider advanced">
						<div class="rslider-tip-advanced">
							<input type="checkbox" id="advanced-settings" value="advanced-settings">
							Advanced settings:
						</div>
						<div>
							<div class="rslider">
								<div class="rslider-tip">Reduce gain (dB):</div>
								<div id="reduce-gain" class="rslider-slider"></div>
							</div>
							<div class="rslider">
								<div class="rslider-tip">Smoothing bands:</div>
								<div id="smoothing-bands" class="rslider-slider"></div>
							</div>
					        <!-- roundSlider Javascript -->
					        <script type="text/javascript" src="/components/roundslider/dist/roundslider.min.js"></script>
						</div>
					</div>
					<div class="col-xs-12" style="margin-top: 20px;">
						<div class="step2-tip col-xs-6">
							<div id="year-desc"></div>
							<div id="profile-desc"></div>
						</div>
						<div class="player col-xs-6">
							<div class="player-btn">
								<button id="go" class="btn btn-send">Clean it!</button>
							</div>
							<div class="bbplayer">
								<span class="bb-play"></span>
								<span class="bb-trackTitle"></span>
								<audio id="player"></audio>
							</div>
							<div class="player-tip">Press play to hear a sample</div>
							<!-- bbplayer Javascript -->
							<script src="/components/bbplayer/js/bbplayer.js"></script>
						</div>
					</div>
				</div>
				<div id="section-error-2" class="section-error"></div>
			</div>
			<div id="step3" class="hdn">
				<i class="fa fa-spinner fa-spin fa-4x"></i><br>
				We're working on it... This process may take a few seconds
				<div id="section-error-3" class="section-error"></div>
			</div>
			<div id="step4" class="hdn">
				<div id="section-error-4" class="section-error"></div>
			</div>
		</div>
	</div>
</div>